<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sample">
	<select id="getSampleList" resultType="com.spring3.dto.Sample">
		select * from sample3
	</select>
	<select id="getSample" resultType="com.spring3.dto.Sample">
		select * from sample3 where num=#{num}
	</select>	
	<insert id="insSample">
		insert into sample3 values (#{num}, #{title}, #{contents}, #{res})
	</insert>
	<update id="upSample">
		update sample3 set title=#{title} where num=#{num}
	</update>
	<delete id="delSample">
		delete from sample3 where num=#{num}
	</delete>
</mapper>
<!-- namespace나 해당 명령의 id는 중복되면 절대 안되며, method 이름을 의미합니다. -->